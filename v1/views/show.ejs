<%- include("partials/header") %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>

      </div>

    </div>
    <div class="col-md-9">
      <div class="img-thumbnail p-0">
          <img src="<%= campground.image %>"  class="img-responsive " style="width: 100%">
          <div class="caption-full p-2" >
            <h4 class="float-right text-primary">Rs 100/night</h4>
            <h4 class="text-primary"><%= campground.name %> </h4>
            <p><%= campground.description %></p>
            <h4><em>Created by: <%= campground.author.username %></em></h4>
            <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
            <form class="d-inline " action="/campground/<%= campground._id %>?_method=DELETE" method="post">
              <button class="btn btn-danger mb-3 ml-3">DELETE</button>
            </form>
            <a href="/campground/<%= campground._id %>/edit" class="btn btn-warning ml-3 mb-3">Update</a>
          </div>
          <% } %>
      </div>
      <div class="card card-body bg-dark ">
        <div class="text-right">

          <a href="/campground/<%= campground._id %>/comment/new" class="btn btn-success">Add a new comment</a>
            </div>
            <hr>
            <div class="row">
          <% campground.comments.forEach(function(comment)
          { %>


              <div class="col-md-12">
                  <p class="text-light"><strong><%= comment.author.username %> :</strong> </p>
                  <span class="float-right text-light">10 days ago</span>
                  <p class="text-light"><%= comment.text %></p>
                    <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                  <form class="d-inline" action="/campground/<%= campground._id %>/comment/<%=comment._id %>?_method=DELETE" method="post">
                    <button  class="btn btn-xs btn-danger">DELETE</button>
                  </form>
                  <a href="/campground/<%= campground._id %>/comment/<%=comment._id %>/edit" class="btn btn-xs btn-warning">EDIT</a>
                  <% } %>
              </div>


        <%  }) %>

                  </div>


                    </div>



      </div>

    </div>

  </div>

</div>







<%- include("partials/footer") %>
